<%= form_tag '/signin' do %>
    <%= label_tag :name, 'Your name: ' %>
    <%= collection_select :user, :name, User.all, :id, :name, prompt: 'Please select your name from this dropdown' %><br><br>

    <%= label_tag :password, 'Your Password: ' %>
    <%= password_field_tag 'user[password]' %><br><br>

    <%= submit_tag 'Sign In' %>
<% end %>