<h1>User Sign-in Page</h1>

<%= form_tag('/signin', method: :post) do %>
    <%= label_tag 'Name: ' %>
    <%= select_tag 'user_name', options_from_collection_for_select(@users, 'name', 'name') %> <br>
    <%= label_tag 'Password: ' %>
    <%= password_field_tag 'password' %>
    <%= submit_tag 'Sign In' %>
<% end %>

